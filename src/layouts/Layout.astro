---
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
import { User2, Menu, FileText } from "lucide-astro";
const description =
  "Explore the world of  through the lens of Marcos . A [Your Location]-based [Your Profession] with a passion for [Your Passion], Marcos brings creativity, expertise in [Your Core Skills], and a commitment to excellence. Dive into a portfolio showcasing innovative projects, read insights on [Your Field], and connect with Marcos for collaborative opportunities. Elevate your projects with a dedicated professional who blends technical prowess with a touch of artistic flair.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <body>
    <slot />
  </body>

  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</html>
